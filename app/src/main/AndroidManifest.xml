<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.leejuhaeun.weatherseeker">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/> <!-- 네트워크 사용에 대한 퍼미션 -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
            android:allowBackup="true"
            android:icon="@drawable/logo"
            android:label="날씨탐정"
            android:roundIcon="@drawable/logo"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"
            android:usesCleartextTraffic="true">
        <activity android:name=".View.Disaster.DisasterTypoon">

        </activity>
        <activity android:name=".View.DetailWeather">

        </activity>
        <activity android:name=".View.WeatherAdvice">
        </activity>
        <activity android:name=".View.WeatherLocalSearch">
        </activity>
        <activity
                android:name=".View.TempPage"
                android:label="@string/title_activity_weather_local_search">
        </activity>
        <activity
                android:name=".Main.SplashScreenActivity"
                android:allowBackup="true"
                android:icon="@drawable/logo"
                android:label="날씨탐정"
                android:roundIcon="@drawable/logo"
                android:supportsRtl="true"
                android:theme="@style/AppTheme"
                android:usesCleartextTraffic="true"> <!-- 아래에 인텐트넣기 -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>